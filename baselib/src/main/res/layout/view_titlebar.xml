<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_vertical"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:id="@+id/rel_titlebar"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_centerVertical="true"
        android:id="@+id/btn_titlebar_left"
        android:paddingLeft="16dp"
        android:layout_width="wrap_content"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_titlebar_left"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:duplicateParentState="true"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:visibility="gone"
            android:textColor="@color/black_bg" />

        <ImageView
            android:id="@+id/img_titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="centerInside"
            android:duplicateParentState="true"
            android:src="@drawable/back" />
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_titlebar_name"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@color/title_center_tv"
        android:textSize="22sp" />

    <FrameLayout
        android:id="@+id/btn_titlebar_right"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/tv_titlebar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            android:textSize="18sp"
            android:duplicateParentState="true"
            android:textColor="@color/black_bg" />

        <ImageView
            android:id="@+id/img_titlebar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:visibility="gone"
            android:scaleType="centerInside"
            android:duplicateParentState="true" />
    </FrameLayout>

</RelativeLayout>
